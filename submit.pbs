#!/bin/bash

## modules
module load fsl/5.0.9
module load camino
module load matlab/2016a
module load spm/8

echo "Setting file paths"
# Grab the config.json inputs
dwi=`./jq -r '.dwi' config.json`;
bvals=`./jq -r '.bvals' config.json`;
bvecs=`./jq -r '.bvecs' config.json`;
t1=`./jq -r '.t1' config.json`;
echo "Files loaded"

echo "Creating NODDI directory"
# Create out directory
OUTDIR=./NODDI;
mkdir $OUTDIR;
echo "NODDI directory created"

if [ -f "$OUTDIR/nodif_preNODDI_brain.nii.gz" ]; then
	echo "File exists. Skipping b0 brainmask creation."
else	
	echo "Creating b0 brainmask for alignment"
	# Create b0 image
	select_dwi_vols \
		${dwi} \
		${bvals} \
		$OUTDIR/nodif.nii.gz \
		0;

	# Brain extraction before alignment
	bet $OUTDIR/nodif.nii.gz \
		$OUTDIR/nodif_preNODDI_brain \
		-f 0.4 \
		-g 0 \
		-m;
	ret=$?
	if [ ! $ret -eq 0 ]; then
		echo "b0 brainmask creation failed"
		echo $ret > finished
		exit $ret
	fi
fi
echo "b0 brainmask creation complete"


if [ -f "$OUTDIR/data_acpc.nii.gz" ]; then
	echo "File exists. Skipping registration."
else
	echo "Register dwi to T1 ACPC space"
	## Align dwi to ACPC space
	matlab -nodisplay -nosplash -r "dwiAlignT1NODDI()";
	
	ret=$?
	if [ ! $ret -eq 0 ]; then
		echo "Registration failed"
		echo $ret > finished
		exit $ret
	fi
fi
echo "Registration complete."


if [ -f "$OUTDIR/nodif_acpc_brain.nii.gz" ]; then
	echo "File exists. Skipping b0 brainmask creation"
else
	echo "Create b0 brainnmask from ACPC aligned dwi for NODDI"
	## Create b0 brainmask for NODDI
	select_dwi_vols \
		$OUTDIR/data_acpc.nii.gz \
		${bvals} \
		$OUTDIR/nodif_acpc.nii.gz \
		0;

	# Brain extraction before NODDI
	bet $OUTDIR/nodif_acpc.nii.gz \
		$OUTDIR/nodif_acpc_brain \
		-f 0.4 \
		-g 0 \
		-m;

	ret=$?
	if [ ! $ret -eq 0 ]; then
		echo "Registration failed"
		echo $ret > finished
		exit $ret
	fi
fi
echo "b0 brainmask creation complete."


if [ -f "$OUTDIR/bvals.scheme" ]; then
	echo "File exists.  Skipping Camino Scheme File creation"
else
	echo "Create Camino Scheme File"
	## Create Camino scheme file
	fsl2scheme \
		-bvecfile $OUTDIR/bvecs_rot \
		-bvalfile ${bvals} \
		-bscale 1 \
		> $OUTDIR/bvals.scheme;
	
	ret=$?
	if [ ! $ret -eq 0 ]; then
		echo "Scheme file creation failed"
		echo $ret > finished
		exit $ret
	fi
fi
echo "Camino scheme file creation complete."


if [ -f "$OUTDIR/AMICO/NODDI/FIT_ICVF.nii.gz" ]; then
	echo "File exists. Skipping NODDI model fitting via AMICO"
else
	echo "Fitting NODDI"
	## Run NODDI
	python $SERVICE_DIR/main.py;
	
	ret=$?
	if [ ! $ret -eq 0 ]; then
		echo "NODDI model fitting failed"
		echo $ret > finished
		exit $ret
	fi
fi
echo "NODDI complete"



echo "Ammend header of NODDI image"
if [ -f "$OUTDIR/AMICO/NODDI/FIT_ICVF_NEW.nii.gz" ]; then
	echo "Header ammended already. Skipping"
else
	## Ammend header of NODDI images
	matlab -nodisplay -nosplash -r "niftiHeaderAmmendNODDI()";

	ret=$?
	if [ ! $ret -eq 0 ]; then
		echo "Registration failed"
		echo $ret > finished
		exit $ret
	fi
fi
echo "Ammending complete"

echo "NODDI Pipeline Complete"
